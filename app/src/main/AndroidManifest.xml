<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eventsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventsApp">
        <activity android:name=".ManageTeachersActivity"></activity>
        <activity android:name=".ManageStudentsActivity" />
        <activity android:name=".AdminLoginActivity" />
        <activity android:name=".AdminHomeActivity" />
        <activity android:name=".TeacherHomeActivity" />
        <activity android:name=".StudentHomeActivity" />
        <activity android:name=".TeacherLoginActivity" />
        <activity android:name=".TeacherRegistrationActivity" />
        <activity android:name=".StudentRegistrationActivity" />
        <activity android:name=".StudentLoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>